generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Separate Student auth (passwordHash optional until activation)
model Student {
  id           String   @id @default(cuid())
  studentCode  String   @unique
  name         String
  email        String   @unique
  passwordHash String?  // set when student signs up / activates
  createdAt    DateTime @default(now())
}

// Teacher/admin users (reuse style similar to main project but simplified)
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  role         String   // 'admin' | 'teacher'
  passwordHash String
  createdAt    DateTime @default(now())
}
