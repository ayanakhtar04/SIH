{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  "outDir": "dist",
  "rootDir": ".",
    "types": ["node", "vitest"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
